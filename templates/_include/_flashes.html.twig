

{% for notification in app.flashes('success') %}
    <div class="text-center alert alert-success w-50 mx-auto my-4 p-4">
        {{ notification }}
    </div>
{% endfor %}

{% for notification in app.flashes('error') %}
    <div class="text-center alert alert-danger w-50 mx-auto my-4 p-4">
        {{ notification }}
    </div>
{% endfor %}

{% for notification in app.flashes('warning') %}
    <div class="text-center alert alert-warning w-50 mx-auto my-4 p-4">
        {{ notification }}
    </div>
{% endfor %}