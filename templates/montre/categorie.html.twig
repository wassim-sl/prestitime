{% extends 'base.html.twig' %}
{% block main_banner %}{% endblock %}
{% block title %}
	{{ title }}
{% endblock %}


{% block body %}
	<div style="max-width: 1400px; margin: auto; padding: 20px; margin-top:20px; background:rgba(246, 216, 186, 0.63); " class="card ">

		<br>
		<h1 style="text-align: center; margin-bottom: 30px; color: rgba(214, 161, 108, 0.86);" class="text-center">
			<strong>
				{{ title }}
			</strong>
		</h1>
		<br>

		{% if montres is not empty %}
			<div class="row g-4">
				{% for montre in montres %}
					<div class="col-12 col-sm-6 col-md-4 col-lg-3">
						<div class="card h-100 shadow-sm border-0">
							<img src="{{ asset('images/photos_montres/' ~ montre.image) }}" class="card-img-top" alt="{{ montre.marque }}" style="height:220px; object-fit:contain;">
							<div class="card-body d-flex flex-column">
								<h6 class="card-subtitle text-muted mb-1">{{ montre.marque }}</h6>
								<p class="card-text small flex-grow-1">{{ montre.description }}</p>
								<div class="d-flex justify-content-between align-items-center">
									<span class="fw-bold">{{ montre.prix }}
										€</span>
									<a href="{{ path('app_montre_show', {'id': montre.id}) }}" class="btn" style="background-color: rgba(214, 161, 108, 0.86); color: white; border: none;">Voir</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<p class="text-center">Aucune montre trouvée.</p>
		{% endif %}
		<br/>

		<div class="text-start mb-3">
			<button onclick="window.history.back()" class="btn" style="background-color: rgba(105, 103, 101, 0.86); color: white; border: none; width: auto;">
				<i class="bi bi-arrow-left"></i>
				Retour
			</button>
		</div>
		
	</div>
{% endblock %}
