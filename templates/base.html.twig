<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
		<title>
			{% block title %}
				Boutique en ligne Prestitime
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" href="{{ asset('css/style.css') }}">
		<link rel="stylesheet" href="{{ asset('css/titre.css') }}">
		<link rel="stylesheet" href="{{ asset('css/liens_nav.css') }}">
		<link rel="stylesheet" href="{{ asset('css/btn_berger.css') }}">


		{{ encore_entry_link_tags('app') }}

	</head>
	<body style="background-color: rgba(243, 243, 243, 1); height: 0px">

		{% block navbar %}
			{% include "_include/_nav.html.twig" %}
		{% endblock %}

		{% block main_banner %}

			<!-- Barre de recherche -->
			<div class="text-center my-4 fw-bold  fst-italic">
				<h1 id="titre" style="color: rgba(210, 133, 133, 1)"></h1>
				<input type="text" class="text-center form-control w-50 mx-auto mt-3" placeholder="Recherchez une montre"/>
			</div>

			<!-- Banieres -->
			<div class="container mb-5">
				<div id="carouselMontres" class="carousel slide" data-bs-ride="carousel">
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img src="{{asset('images/photos_baniere/photo.3.baniere.webp')}}" class="d-block w-100" alt="Bannière"/>
						</div>
						<div class="carousel-item ">
							<img src="{{asset('images/photos_baniere/photo.2.baniere.webp')}}" class="d-block w-100" alt="Bannière"/>
						</div>
						<div class="carousel-item ">
							<img src="{{asset('images/photos_baniere/photo.1.baniere.jpg')}}" class="d-block w-100" alt="Bannière 2"/>
						</div>
						<div class="carousel-item">
							<img src="{{asset('images/photos_baniere/photo.4.baniere.jpg')}}" class="d-block w-100" alt="Bannière 3"/>
						</div>
					</div>
					<!--Navigation des images-->
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselMontres" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Précédent</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselMontres" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Suivant</span>
					</button>
				</div>
			</div>
		{% endblock %}


		<main>
			{% include "_include/_flashes.html.twig" %}
			<!-- Le block body qui est dans index.html.twig-->
			{% block body %}{% endblock %}
		</main>

		<!-- Le block formulaire de connexion -->
		{% block formulaire %}{% endblock %}


		{% block footer %}

			{% include "_include/_footer.html.twig" %}
		{% endblock %}

		 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-Q4VRBbNHOzqHlfm+2Ve3gCvYUIQlBF3YYt3NRmQ2sfkFDU2qZxU2RQDhqlRHRXac" crossorigin="anonymous">
										
										</script>
		{% block javascript %}
			 <script src="{{asset('js/script.js')}}"></script>

		{% endblock %}
	</body>
</html>
