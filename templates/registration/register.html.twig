{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}
{% block main_banner %}{% endblock %}

{% block body %}
<div style="background-color:  rgba(250, 242, 242, 0.9);" class="container card mt-5  col-md-6 mx-auto p-4 rounded border-2 border-gols shadow" >

	<h1 class="text-center" style="color: rgba(210, 133, 133, 1)"><strong>Inscription</strong></h1>

	{{ form_errors(registrationForm) }}
    

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.prenom) }}
	{{ form_row(registrationForm.nom) }}

	{{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            attr:{
                placeholder: 'saisir votre prénom'
            }
        }) }}
	{{ form_row(registrationForm.agreeTerms) }}

	<button type="submit" class="btn btn-dark w-100 pt-3 ">Créer mon compte</button>
	{{ form_end(registrationForm) }}
    </div>
   
{% endblock %}
