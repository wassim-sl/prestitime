    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm rounded-3">
                <div class="card-body">
                    <h3 class="card-title text-center">Montres</h3>
                    <a href="{{ path('app_montre_index') }}" class="btn btn-primary mt-2 w-100">Tous les montres</a>
